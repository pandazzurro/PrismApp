<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PrismUnityApp1.Views.UserPage">
  <StackLayout>
    <Label Text="{Binding Username}" VerticalOptions="Center" HorizontalOptions="Center" />
    <Label Text="{Binding DataNascita}" VerticalOptions="Center" HorizontalOptions="Center" />
    <Label Text="{Binding Email}" VerticalOptions="Center" HorizontalOptions="Center" />
    <Image Source="{Binding FotoProfilo}" Aspect="AspectFill"  WidthRequest="100" HeightRequest="100" VerticalOptions="Center" HorizontalOptions="Center"/>
    <Button Text="Logout" Command="{Binding LogoutCommand}"></Button>
  </StackLayout>
</ContentPage>